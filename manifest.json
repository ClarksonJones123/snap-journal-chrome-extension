{
  "manifest_version": 3,
  "name": "Snap Journal - Medical-Grade Screenshot Annotation",
  "version": "2.0.1",
  "description": "Professional screenshot annotation with unlimited storage. Works on ANY webpage including Chrome internal pages. HIPAA compliant.",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Snap Journal - Professional Screenshot Annotation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "annotation-interface.html",
        "annotation-interface.css",
        "annotation-interface.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self';"
  },
  
  "minimum_chrome_version": "88"
}